# Database (use PostgreSQL in production)
DATABASE_URL=postgresql://user:password@host:5432/crelytic

# Anthropic Claude API
ANTHROPIC_API_KEY=sk-ant-your-key-here

# Admin account (seeded on first boot)
ADMIN_EMAIL=your-email@example.com
ADMIN_PASSWORD=your-admin-password

# Cookie signing secret (generate with: python -c "import secrets; print(secrets.token_hex(32))")
SECRET_KEY=change-me-to-a-random-64-char-hex-string

# Environment
ENV=production

# CORS (restrict in production)
CORS_ORIGINS=https://crelytic.ai,https://engine.crelytic.ai

# Upload
UPLOAD_DIR=/app/uploads
MAX_UPLOAD_SIZE_MB=100
